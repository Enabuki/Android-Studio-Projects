<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/dialog_background"
    android:layout_margin="45dp"
    android:gravity="center"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/confirm_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="monospace"
        android:textColor="@color/black"
        android:text="CONFIRM EXIT"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:fontFamily="monospace"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:text="Do you wish to exit the application?"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- Button added below the dialog message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:onClick="cancelExit"
            android:text="Cancel" /> <!-- Assign onClick function to handle button click -->

        <Button
            android:id="@+id/btnOkay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="okayExit"
            android:text="Okay" /> <!-- Assign onClick function to handle button click -->

    </LinearLayout>

</LinearLayout>
