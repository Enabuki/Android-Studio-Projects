<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game"
    android:id="@+id/relativeLayout"
    >

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/game" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="315dp"
        android:background="@android:color/transparent"
        android:onClick="goToInstructions4" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:background="@android:color/transparent"
        android:onClick="startGame" />



    <!-- Add 6 slots (ImageViews) and guess buttons here -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="200dp"
        android:background="@android:color/transparent"
        android:weightSum="9"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:gravity="center">

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="330dp"
        android:background="@android:color/transparent"
        android:weightSum="9"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            >

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            >

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            >

        </LinearLayout>

    </LinearLayout>

    <!-- Add these buttons below the startButton in activity_main.xml -->

    <Button
        android:id="@+id/guessButton1"
        android:layout_width="55dp"
        android:layout_height="81dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="48dp"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:background="@android:color/transparent"
        />

    <Button
        android:id="@+id/guessButton2"
        android:layout_width="55dp"
        android:layout_height="81dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="48dp"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/guessButton3"
        android:layout_width="55dp"
        android:layout_height="81dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="48dp"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/guessButton4"
        android:layout_width="54dp"
        android:layout_height="81dp"
        android:layout_marginLeft="181dp"
        android:layout_marginTop="48dp"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/guessButton5"
        android:layout_width="54dp"
        android:layout_height="81dp"
        android:layout_marginLeft="236dp"
        android:layout_marginTop="48dp"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/guessButton6"
        android:layout_width="53dp"
        android:layout_height="81dp"
        android:layout_marginLeft="291dp"
        android:layout_marginTop="48dp"
        android:layout_below="@id/startButton"
        android:onClick="onGuessButtonClick"
        android:background="@android:color/transparent"/>



    <ImageView
        android:id="@+id/ballImageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="13dp"
        android:src="@drawable/bola"
        android:visibility="invisible" />

</RelativeLayout>
